<Window x:Class="RidingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RidingSystem"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:navigation="clr-namespace:LinnerToolkit.Desktop.ModernUI.Navigation;assembly=LinnerToolkit.Desktop.ModernUI"
        xmlns:mvvm="clr-namespace:LinnerToolkit.Desktop.Mvvm;assembly=LinnerToolkit.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" mvvm:ViewModelLocator.AutowireViewModel="True" WindowStyle="None" AllowsTransparency="True" WindowState="Maximized">
    <Grid>
        <MediaElement x:Name="MediaElement" Source="Assets/Sound/Common/Background.mp3" LoadedBehavior="Manual" Visibility="Collapsed" MediaEnded="MediaElement_MediaEnded"/>
        <mui:ModernFrame navigation:RegionLocator.RegionName="MainRegion"/>
    </Grid>
</Window>
